{% extends "Partie_admin/Shared/base.html.twig" %}

{% block title %}

	{% if app.request.attributes.get('_route') == 'Ajout_un_miniplan' %}
		Ajout d'un Plan à une Maison

	{% elseif app.request.attributes.get('_route') == 'miniplans_new' %}
		1234
	{% endif %}

{% endblock %}

{% block stylesheets %}
	<link href=" {{ asset('bootstrap.min.css') }}" rel="stylesheet"/>
	<link href=" {{ asset('dataTables.bootstrap.min.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

	<div class="col-12 d-flex no-block align-items-center">


		<div class="ml-auto text-right">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"></li>

				</ol>
			</nav>
		</div>
	</div>
</div></div><div class="container-fluid">

<div class="row">
	<div class="col-md-12">
		<div class="card">


			{{ form_start(form) }}
			<div class="card-body">
				<h4 class="card-title">
					Ajout d'un plan à une Maison

				</h4>
				<div class="form-group row">
					<label for="fname" class="col-sm-3 text-right control-label col-form-label">
						Titre

					</label>
					<div class="col-sm-9">
						{{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Saisir le titre du Plan' }}) }}
					</div>
				</div>


				{% if app.request.attributes.get('_route') == 'Ajout_un_miniplan' %}

					{% elseif app.request.attributes.get('_route') == 'miniplans_new' %}


						<div class="form-group row">
							<label for="inputStatus" class="col-sm-3 text-right control-label col-form-label">
								Choisir la Maison
							</label>
							<select id="userplan" name="userplan" class="form-row  col-sm-9 ">
								<option selected="" disabled="">Selectioner une maison</option>

								{% for user in users.plans %}

									<option value="{{ user.id}}">{{ user.titre}}</option>

								{% endfor %}
							</select>
						</div>


					</div>

				{% endif %}


				<div class="form-group row">
					<label for="lname" class="col-sm-3 text-right control-label col-form-label">
						Prix
					</label>

					<div class="col-sm-9">
						{{ form_widget(form.prix, {'attr': {'class': 'form-control row ', 'placeholder': 'Le Prix du plan'  }}
						) }}
					</div>
				</div>

				<div class="form-group row">

					<label for="lname" class="col-sm-3 text-right control-label col-form-label">
						Fichier du plan
					</label>
					<div class="col-sm-9">
						{{ form_widget(form.fichiers, {'attr': {'class': 'form-control ' , 'placeholder': 'Fichier du plan' , 'accept':'pdf' }}) }}

					</div>
				</div>
				<div class="border-top m-r-15">
					<div class="card-body">

						<button class="btn btn-cyan">{{ button_label|default('Enregistrer') }}</button>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
			<div class="card-body">


				<button class="btn btn-danger">
					<a href="{{ path('miniplans_index') }}" style="color:#fff;">Revenir à la liste</a>
				</button>

			</div>


		</div>
	</div>
</div></div>{% block javascripts %}
<script src=" {{ asset('dataTables.bootstrap.min.js') }}"></script>
<script src=" {{ asset('jquery-3.5.1.js') }}"></script>
<script src=" {{ asset('jquery.dataTables.min.js') }}"></script>
<script>
	$(document).ready(function () {
$('#example').DataTable();
});
</script>{% endblock %}{% endblock %}
