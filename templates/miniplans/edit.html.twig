{% extends "Partie_admin/Shared/base.html.twig" %}

{% block title %}
	Edit Plans


{% endblock %}

{% block body %}
	<h1>Edit Miniplans</h1>

	{{ include('miniplans/_form.html.twig', {'button_label': 'Update'}) }}

	<a href="{{ path('miniplans_index') }}">back to list</a>

	{{ include('miniplans/_delete_form.html.twig') }}


	<div>

		{% if app.request.attributes.get('_route') == 'miniplans_edit' %}

			<h2>
				les images
			</h2>
			{% for fichier in miniplan.fichiers %}
				<div>

					<img src="{{ asset('Admin/assets/images/imagepdf.jpg') }}" alt="Image" width="150">
					<a href="{{ path('miniplans_delete_image', {'id': fichier.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ fichier.id) }}">Supprimer</a>

				</div>

			{% endfor %}

		{% endif %}

	</div>


	{% block javascripts %}
		<script src="{{ asset('js/images.js') }}"></script>
	{% endblock %}
{% endblock %}
