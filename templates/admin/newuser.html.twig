{% extends "Partie_admin/Shared/base.html.twig" %}

{% block title %}
     Marché des Plans  Administration --Créer un Nouvel Utilisateur     
            
        
    
{% endblock %}

{% block body %}

    <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">
            Créer Un Utilisateur          
                                                                    
                                                        
                                            
                                
                    
        </h4>
        <div class="ml-auto text-right">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">
                           Accueil
                                                                                                                                                                                        
                                                                                                                                                                    
                                                                                                                                        
                                                                                                            
                                                                                
                                                    
                        </a>
                    </li>

                </ol>
            </nav>
        </div>
    </div>
</div></div><div class="container-fluid">

<div class="row">
    <div class="col-md-12">
        <div class="card">
           
            <form action="{{ path('admin_new_user') }}" method="post">
                <div class="form-row">

                    <div class="form-group col-md-12">
                        <label for="inputName">
                            Pseudo
                                                                            
                                                    
                        </label>
                        <input type="text" class="form-control" id="pseudo" name="pseudo" placeholder="Enter your username" required=""></div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputName">
                                Email 
                                                                                    
                                                            
                            </label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required=""></div>
                            <div class="form-group col-md-12">
                                <label for="inputName">
                                    Your Password
                                                                                            
                                                                    
                                </label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required=""></div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="inputName">
                                        Choisir un Status
                                                                                                    
                                                                            
                                    </label>
                                    <select class="form-control" id="userlist" name="userlist">

                                        <option value="R3">
                                            CLIENT
                                                                                    
                                        </option>

                                        <option value="R2">
                                            ARCHITECTE
                                                                                    
                                        </option>
                                    {% if  is_granted('ROLE_SUPER_ADMIN') %}

                                        <option value="R1">
                                            ADMINISTRATEUR
                                                                                    
                                        </option>

                                    {% endif %}
                                    </select>
                                </div>
                            </div>
                           
                            <div class="form-group form-row"></div>
                            <hr class="mt-3 mb-4">
                                <div class="col-12">
                                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                                       
                                        <button class="btn btn-primary mt-3 mt-sm-0" type="submit">
                                            Register
                                                                                                            
                                                                                    
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                {% endblock %}
                