{% if app.request.attributes.get('_route') == 'app_login' %}
	{% else %}


		<div class="modal fade" id="trans{{miniplan.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLongTitle">
							Vous devez vous connecter ou s'inscrire avant d'effectuer l'achat
						</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body" style="color: black;">
						{{ include('messages.html.twig') }}

						<div class="col-xl-12">
							<div class="row">
								<div class="col-xl-6 col-lg-6 col-sm-12">
									<button class="btn btn-danger" type="submit">
										Connexion | Inscription</button>
								</div>

							</div>
						</div>

					</div>

				</div>
			</div>
		</div>
{% endif %}



