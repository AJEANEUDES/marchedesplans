{% extends "Partie_admin/Shared/base.html.twig" %}

{% block title %}Formulaires index
{% endblock %}

{% block body %}


	{% block stylesheets %}
		<link href=" {{ asset('css/buttons.dataTables.min.css') }}"/>
		<link href=" {{ asset('css/jquery.dataTables.min.css') }}"/>
	{% endblock %}


	<div class="col-12 d-flex no-block align-items-center">
		<div class="col-lg-3 col-md-5"></div>
		<h4 class="page-title">
			Liste des Formulaires de contact


		</h4>
		<div class="ml-auto text-right">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">

					</li>

				</ol>
			</nav>
		</div>
	</div>
</div></div>

<div class="container-fluid">

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card">
				<div class="card-body">
					<div class="table-responsive">
						<table id="zero_config" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>Id</th>
									<th>Nom</th>
									<th>Email</th>
									<th>Message</th>
									<th>Status</th>
									<th>Ip</th>

									<th>Date de Cr√©ation</th>
									<th>Date de Modification</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for formulaire in formulaires %}
									<tr>
										<td>{{ formulaire.id }}</td>
										<td>{{ formulaire.nom }}</td>
										<td>{{ formulaire.email }}</td>
										<td>{{ formulaire.message }}</td>
										<td>{{ formulaire.status }}</td>
										<td>{{ formulaire.ip }}</td>

										<td>{{ formulaire.createdAt ? formulaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>{{ formulaire.updatedAt ? formulaire.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<a class="btn btn-dropbox" href="{{ path('formulaires_show', {'id': formulaire.id}) }}">Voir</a>
											<a class="btn btn-primary" href="{{ path('formulaires_edit', {'id': formulaire.id}) }}">Modifier</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="10">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

