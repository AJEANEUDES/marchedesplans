{% extends "Partie_admin/Shared/base.html.twig" %}

{% block title %}
	Marché des Plans  Administration -- Liste des Formes de Maisons

{% endblock %}

{% block body %}

	<div class="col-12 d-flex no-block align-items-center">
		<h4 class="page-title">
			Listes des Formes de Maisons


		</h4>
		<div class="ml-auto text-right">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a class="btn btn-cyan" href="{{ path('forme_new') }}">
							Ajouter

						</a>
					</li>

				</ol>
			</nav>
		</div>
	</div>
</div></div>

<div class="container-fluid">

<div class="row">
	<div class="col-md-12">

		<div class="card">
			<div class="card-body">

				<div class="table-responsive">
					<table id="zero_config" class="table table-striped table-bordered">
						<thead>
							<tr>

								<th>
									libellé

								</th>
								<th>
									actions

								</th>

							</tr>
						</thead>
						<tbody>
							{% for forme in formes %}
								<tr>

									<td>
										{{ forme.libelle }}
									</td>
									<td>
									
										<a class="btn btn-success" href="{{ path('forme_edit', {'id': forme.id}) }}">
											Modifier

										</a>
										<a class="btn btn-danger">
											{{ include('forme/_delete_form.html.twig') }}
										</a>
									</td>

								</tr>
							{% else %}
								<tr>
									<td colspan="7">
										aucune forme veuillez en créer

									</td>
								</tr>
							{% endfor %}

						</tbody>

					</table>
				</div>

			</div>
		</div>

	</div>
</div></div></div>{% block javascripts %}{% endblock %}{% endblock %}
