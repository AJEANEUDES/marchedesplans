{% extends "Partie_admin/Shared/base.html.twig" %}

{% block title %}
	Modifier le Profil


{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('Admin/assets/libs/jquery-steps/jquery.steps.css') }}" rel="stylesheet">
	<link href="{{ asset('Admin/assets/libs/jquery-steps/steps.css') }}" rel="stylesheet">
	<link href="{{ asset('Admin/dist/css/style.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

	{% if app.user %}
		<div class="card-body box-profile">
			<div class="text-center">
					<i class="ti-user m-r-5 m-l-5">
						Mon Profil
					</i>
				</div>
			<h3 class="profile-username text-center">
				{{ app.user.username }}
			</h3>

			{% for role in user.roles %}

				<p class="text-muted text-center">
					{# {% if role == "ROLE_USER" %}
						Client #}

					{% if role == "ROLE_ARCHITECTE" %}
						Architecte

					{% elseif role == "ROLE_ADMIN" %}
						Administrateur
					{% elseif role == "ROLE_SUPER_ADMIN" %}
						root

					{% endif %}

				</p>

			{% endfor %}

			<ul class="list-group list-group-unbordered mb-3">
				<li class="list-group-item">
					<b>
						Nom
					</b>
					<a class="float-right">
						{{ app.user.pseudo }}
					</a>
				</li>
				 <li class="list-group-item">
						<b>
							Prenoms
						</b>
						<a class="float-right">
							{{ app.user.prenoms }}
						</a>
					</li>
					<li class="list-group-item">
						<b>
							Email
						</b>
						<a class="float-right">
							{{ app.user.email }}
						</a>
					</li>
				<li class="list-group-item">
					<b>
						Adresse
					</b>
					<a class="float-right">
						{{ app.user.adresse }}
					</a>
				</li>
				{# <li class="list-group-item">
					<b>
						Numero de carte Bancaire
					</b>
					<a class="float-right">
						{{ app.user.banque }}
					</a>
				</li> #}
				<li class="list-group-item">
					<b>
						Telephone
					</b>
					<a class="float-right">
						{{ app.user.tel }}
					</a>
				</li>

				{# <li class="list-group-item">
					<b>
						Pays
					</b>
					<a class="float-right">
						{{ app.user.pays }}
					</a>
				</li> #}

			</ul>

		</div>
	{% endif %}

	<!-- ============================================================== -->
	<!-- Preloader - style you can find in spinners.css -->
	<!-- ============================================================== -->

	<!-- ============================================================== -->
