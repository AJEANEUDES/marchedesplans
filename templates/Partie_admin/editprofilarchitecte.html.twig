	<!-- ============================================================== -->
	<!-- ============================================================== -->
	<!-- Container fluid  -->
	<!-- ============================================================== -->
		<div class="container-fluid"> <!-- ============================================================== -->
		<!-- Start Page Content -->
		<!-- ============================================================== -->
			<div class="card"> <div class="card-body wizard-content">
				<h4 class="card-title">
					Editer Profil
				</h4>
				<h6 class="card-subtitle"></h6>

				<form action="{{ path('architecte_edit_my_profil',{'id':user. id}) }}" method="post">
					<div class="form-row">


						<div class="form-group col-md-12">
							<label for="inputName">
								Nom

							</label>
							<input type="text" class="form-control" id="pseudo" name="pseudo" placeholder="Entrer votre nom" value=" {{ app.user.pseudo }}" required=""></div>
					</div>

					<div class="form-row">

						<div class="form-group col-md-12">
							<label for="inputName">
								<strong>Prénoms</strong>

							</label>
							<input type="text" class="form-control" id="prenoms" name="prenoms" placeholder="Entrer votre prenoms" value=" {{ app.user.prenoms }}"  required="">
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-12">
							<label for="inputName">
								Email

							</label>
							<input type="email" class="form-control" id="email" name="email" placeholder="Entrer votre email address" value=" {{ app.user.email }}" required=""></div>
						<div class="form-group col-md-12">
							<label for="inputName">
								Votre mot de passe
							</label>
							<input type="password" class="form-control" id="password" name="password" placeholder="Entrer votre mot de passe" value=" {{ app.user.password }}" required=""></div>
					</div>

					<div class="form-group col-md-12">
						<label for="inputName">
							Adresse

						</label>
						<input type="text" class="form-control" id="adresse" name="adresse" placeholder="Adresse" value=" {{ app.user.adresse }}" required=""></div>
				</div>
{# 
				<div class="form-group col-md-12">
					<label for="inputName">
						Numero de carte Bancaire

					</label>
					<input type="text" class="form-control" id="banque" name="banque" placeholder="carte bancaire" value=" {{ app.user.banque }}" required=""></div>
			</div> #}
			<div class="form-group col-md-12">
				<label for="inputName">
					Télephone
				</label>
				<input type="text" class="form-control" id="tel" name="tel" placeholder="téléphone" value=" {{ app.user.tel }}" required=""></div>
		</div>


		<div class="form-group form-row">
			<div class="col-md-12">
				<label class="custom-control custom-checkbox checkbox-lg">
					<input type="checkbox" class="custom-control-input" id="customCheck1">
					<div class="custom-control-label" for="customCheck1">
						J'accepte

						<a href="{{path('terme')}}" target="_blank">
							les termes et les conditions

						</a>
					</div>
				</label>
			</div>
		</div>
		<hr class="mt-3 mb-4">
		<div class="col-12">
			<div
				class="d-flex flex-wrap justify-content-between align-items-center">
				
				<button class="btn btn-primary mt-3 mt-sm-0" type="submit">
					Modifier profil

				</button>
			</div>
		</div>
	</form>

{% endblock %}
